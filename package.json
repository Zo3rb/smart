  "name": "smart",
  "version": "1.0.0",
  "main": "server/server.js",
  "scripts": {
    "start": "NODE_ENV=production node server/server.js",
    "server": "NODE_ENV=development nodemon server/server.js",
    "client": "cd client && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install-client": "cd client && npm install",
    "build-client": "cd client && npm run build",
    "db:migrate": "sequelize-cli db:migrate",
    "db:seed": "sequelize-cli db:seed:all",
    "db:reset": "NODE_ENV=development node -e \"require('./server/utils/dbInit').initializeDatabase(true)\"",
    "db:create": "sequelize-cli db:create",
    "db:drop": "sequelize-cli db:drop",
    "db": "node server/utils/dbCli.js",
    "test:email": "NODE_ENV=development node server/utils/testEmailService.js"
  },
